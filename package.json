{
  "name": "kanban-panel",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "sync:watch": "node scripts/sync-agent.js",
    "electron:dev": "concurrently \"npm:dev\" \"wait-on http://localhost:3000 && set ELECTRON_DEV=1&& electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.0.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.jarvis.kanban",
    "productName": "Jarvis Kanban",
    "asar": true,
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "scripts/**/*",
      "package.json",
      "next.config.ts",
      "tsconfig.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  }
}
